<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Trace"
      internalLogFile="${basedir}/logs/internallog.txt">

  <targets>
    <target
      xsi:type="Console"
      name="console"
      layout="${date:format=HH\:mm\:ss}|${level}|${message}"
      detectConsoleAvailable="true"
    />

    <target
      xsi:type="File"
      name="info"
      fileName="${basedir}/logs/Info/${shortdate}.log"
      layout="${longdate} | ${callsite} | ${uppercase:${level}} | ${message} ${newline}"
      archiveFileName="${basedir}/logs/archives/log.main.${shortdate}.{#}.txt"
      archiveAboveSize="5242880"
      archiveEvery="Day"
      archiveNumbering = "Rolling"
      maxArchiveFiles="3"
    />

    <target
      xsi:type="File"
      name="warn"
      fileName="${basedir}/logs/Warm/${shortdate}.log"
      layout="${longdate} | ${callsite} | ${uppercase:${level}} | ${message} ${newline}"
      archiveFileName="${basedir}/logs/archives/log.main.${shortdate}.{#}.txt"
      archiveAboveSize="5242880"
      archiveEvery="Day"
      archiveNumbering = "Rolling"
      maxArchiveFiles="3"
    />

    <target
      xsi:type="File"
      name="error"
      fileName="${basedir}/logs/Error/${shortdate}.log"
      layout="${longdate} | ${callsite} | ${uppercase:${level}} | ${message} ${newline}"
    />
  </targets>

  <rules>


    <logger name="*" minlevel="Error" maxlevel="Error" writeTo="error" />
    <logger name="*" minlevel="Warn" maxlevel="Warn"  writeTo="warn" />
    <logger name="*" minlevel="Info" writeTo="info" />
    <logger name="*" minlevel="Info" writeTo="console" />


    <!-- <logger name="*" minlevel="Error" writeTo="error" />
    <logger name="*" minlevel="Info" writeTo="console" />-->
  </rules>
</nlog>